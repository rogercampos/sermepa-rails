  <%= hidden_field_tag "Ds_Merchant_ChargeExpiryDate", transaction.charge_expiry_date if transaction.charge_expiry_date %>
  <%= hidden_field_tag "Ds_Merchant_SumTotal", transaction.sum_total if transaction.sum_total %>

  <%= submit_tag "Pay" %>
<% end %>

